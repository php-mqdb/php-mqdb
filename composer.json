{
  "name": "php-mqdb/php-mqdb",
  "description": "PHP Message Queue with database. Provide some interface, trait & client to manage message queue in php.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "PhpMqdb\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpMqdb\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*",
    "ext-json": "*",
    "ext-pdo": "*",
    "doctrine/dbal": "^2.13"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  }

}
