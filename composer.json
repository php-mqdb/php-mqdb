{
  "name": "php-mqdb/php-mqdb",
  "description": "PHP Message Queue with database. Provide some interface, trait & client to manage message queue in php.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "PhpMqdb\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpMqdb\\Tests\\Unit\\": "./tests/unit",
      "PhpMqdb\\Tests\\Integration\\": "./tests/integration"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-json": "*",
    "ext-pdo": "*",
    "ramsey/uuid": "^4.0"
  },

  "suggest": {
    "doctrine/dbal": "Allow connection with Doctrine/DBAL rather than PDO",
    "eureka/component-database": "Have PDO factory to handle reconnection when necessary"
  },

  "require-dev": {
    "ext-pcntl": "*",
    "doctrine/dbal": "^4.0.1",
    "eureka/component-database": "^3.3.0",
    "friendsofphp/php-cs-fixer": "^3.54.0",
    "maglnet/composer-require-checker": "^4.7.1",
    "phpstan/phpstan": "^1.10.67",
    "phpstan/phpstan-phpunit": "^1.3.16",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.19"
  }

}
